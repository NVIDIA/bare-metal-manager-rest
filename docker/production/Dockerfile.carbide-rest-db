# Build stage
FROM golang:1.25 AS builder

# Set environment variables
ENV GIT_TERMINAL_PROMPT=1
ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

# Configure Go for private repositories
RUN go env -w GOPRIVATE="gitlab-master.nvidia.com"

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy go module files
COPY go.mod go.sum ./
RUN --mount=type=secret,id=gitcreds,dst=/root/.netrc go mod download

# Copy source files
COPY carbide-rest-db/ ./carbide-rest-db/
COPY carbide-rest-common/ ./carbide-rest-common/
COPY carbide-rest-api-schema/ ./carbide-rest-api-schema/

# Build the migrations binary
WORKDIR /workspace/carbide-rest-db
RUN VERSION=$(cat VERSION 2>/dev/null || echo "dev") && \
    BUILD_TIME=$(date +"%Y-%m-%d %H:%M:%S") && \
    go build \
        -ldflags "-extldflags '-static' -w -s" \
        -o /app/migrations \
        ./cmd/migrations

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    bash \
    postgresql-client \
    tzdata

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy binary and scripts from builder
COPY --from=builder /app/migrations /app/migrations
COPY carbide-rest-db/scripts/migrate.sh /app/migrate.sh

# Make scripts executable
RUN chmod +x /app/migrate.sh /app/migrations && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Run migrations
ENTRYPOINT ["/app/migrate.sh"]

