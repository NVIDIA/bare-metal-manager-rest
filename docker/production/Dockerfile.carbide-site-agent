# Build stage
FROM golang:1.25 AS builder

# Set environment variables
ENV GIT_TERMINAL_PROMPT=1
ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

# Configure Go for private repositories
RUN go env -w GOPRIVATE="gitlab-master.nvidia.com"

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy go module files
COPY go.mod go.sum ./
RUN --mount=type=secret,id=gitcreds,dst=/root/.netrc go mod download

# Copy source files
COPY carbide-site-agent/ ./carbide-site-agent/
COPY carbide-rest-common/ ./carbide-rest-common/
COPY carbide-rest-api-schema/ ./carbide-rest-api-schema/
COPY carbide-site-workflow/ ./carbide-site-workflow/

# Build elektra (site agent)
WORKDIR /workspace/carbide-site-agent
RUN VERSION=$(cat VERSION 2>/dev/null || echo "dev") && \
    BUILD_TIME=$(date +"%Y-%m-%d %H:%M:%S") && \
    go build \
        -ldflags "-extldflags '-static' -w -s \
                  -X 'gitlab-master.nvidia.com/nvmetal/elektra-site-agent/pkg/metadata.Version=${VERSION}' \
                  -X 'gitlab-master.nvidia.com/nvmetal/elektra-site-agent/pkg/metadata.BuildTime=${BUILD_TIME}'" \
        -o /app/elektra \
        ./cmd/elektra

# Build elektractl
RUN go build \
        -ldflags "-extldflags '-static' -w -s \
                  -X 'gitlab-master.nvidia.com/nvmetal/elektra-site-agent/pkg/metadata.Version=${VERSION}' \
                  -X 'gitlab-master.nvidia.com/nvmetal/elektra-site-agent/pkg/metadata.BuildTime=${BUILD_TIME}'" \
        -o /app/elektractl \
        ./cmd/elektractl

# Download kubectl for runtime
RUN apt-get update && apt-get install -y --no-install-recommends curl && \
    curl -LO "https://dl.k8s.io/release/v1.28.0/bin/linux/amd64/kubectl" && \
    chmod +x kubectl && \
    mv kubectl /app/kubectl && \
    rm -rf /var/lib/apt/lists/*

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    bash \
    curl \
    gcompat \
    tzdata

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy binaries from builder
COPY --from=builder /app/elektra /app/elektra
COPY --from=builder /app/elektractl /app/elektractl
COPY --from=builder /app/kubectl /usr/local/bin/kubectl

# Copy runtime scripts and configs
COPY carbide-site-agent/docker/entrypoint.sh /app/entrypoint.sh
COPY carbide-site-agent/cmd/elektractl/elektractl.env /app/elektractl.env

# Make everything executable
RUN chmod +x /app/elektra /app/elektractl /usr/local/bin/kubectl /app/entrypoint.sh && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["/app/elektra", "health"] || exit 1

# Run via entrypoint script
ENTRYPOINT ["/app/entrypoint.sh", "elektra"]

