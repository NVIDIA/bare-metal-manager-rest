# Build stage
FROM golang:1.25 AS builder

# Set environment variables
ENV GIT_TERMINAL_PROMPT=1
ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

# Configure Go for private repositories
RUN go env -w GOPRIVATE="gitlab-master.nvidia.com"

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy go module files
COPY go.mod go.sum ./
RUN --mount=type=secret,id=gitcreds,dst=/root/.netrc go mod download

# Copy source files
COPY carbide-rest-workflow/ ./carbide-rest-workflow/
COPY carbide-rest-common/ ./carbide-rest-common/
COPY carbide-rest-auth/ ./carbide-rest-auth/
COPY carbide-rest-db/ ./carbide-rest-db/
COPY carbide-rest-api-schema/ ./carbide-rest-api-schema/
COPY carbide-site-workflow/ ./carbide-site-workflow/

# Build the workflow service
WORKDIR /workspace/carbide-rest-workflow
RUN VERSION=$(cat VERSION 2>/dev/null || echo "dev") && \
    BUILD_TIME=$(date +"%Y-%m-%d %H:%M:%S") && \
    go build \
        -ldflags "-extldflags '-static' -w -s" \
        -o /app/workflow \
        ./cmd/workflow

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    tzdata

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/workflow /app/workflow

# Create necessary directories
RUN mkdir -p /var/secrets/temporal/certs && \
    chown -R appuser:appuser /app /var/secrets

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["/app/workflow", "health"] || exit 1

# Run the application
ENTRYPOINT ["/app/workflow"]

