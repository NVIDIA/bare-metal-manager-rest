# Fast Dockerfile - Uses pre-built binaries and shared base runtime image

FROM localhost:5000/carbide-base-runtime:latest

# Copy pre-built binaries from build directory
COPY build/binaries/elektra /usr/local/bin/elektra
COPY build/binaries/elektractl /usr/local/bin/elektractl

# Copy entrypoint script
COPY carbide-site-agent/docker/entrypoint.sh /usr/local/bin/entrypoint.sh

# Make all binaries executable
RUN chmod +x /usr/local/bin/entrypoint.sh /usr/local/bin/elektra /usr/local/bin/elektractl

# Set the elektra worker binary as the entrypoint of the container
CMD ["/usr/local/bin/entrypoint.sh", "elektra"]

